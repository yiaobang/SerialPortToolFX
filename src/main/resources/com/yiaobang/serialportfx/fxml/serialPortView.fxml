<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<!-- 保持 820 x 600 比例，适配多语言 -->

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yiaobang.serialporttoolfx.view.SerialPortView">
   <stylesheets>
      <URL value="@../fonts/fonts.css" />
      <URL value="@../css/serialport.css" />
      <URL value="@../css/icon-button.css" />
   </stylesheets>

   <!-- 1. 顶部标题栏 -->
   <AnchorPane prefHeight="34.0" prefWidth="717.0" styleClass="top" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Label layoutX="50.0" layoutY="1.0" prefHeight="28.0" prefWidth="123.0" text="SerialPortToolFX" AnchorPane.bottomAnchor="3.0" AnchorPane.topAnchor="3.0" />
      <StackPane layoutX="5.0" layoutY="5.0" prefHeight="28.0" prefWidth="28.0" styleClass="ico" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="3.0">
         <Region />
      </StackPane>
      <HBox alignment="CENTER_RIGHT" prefHeight="34.0" spacing="2.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <StackPane onMouseClicked="#switchLanguage" prefHeight="34.0" prefWidth="38.0" styleClass="icon-button"><Region styleClass="icon-shape, shape-lang" /></StackPane>
         <StackPane onMouseClicked="#switchTheme" prefHeight="34.0" prefWidth="38.0" styleClass="icon-button"><Region styleClass="icon-shape, shape-theme" /></StackPane>
         <StackPane onMouseClicked="#min" prefHeight="34.0" prefWidth="38.0" styleClass="icon-button"><Region styleClass="icon-shape, shape-min" /></StackPane>
         <StackPane onMouseClicked="#close" prefHeight="34.0" prefWidth="45.0" styleClass="icon-button, exit-btn"><Region styleClass="icon-shape, shape-close" /></StackPane>
      </HBox>
   </AnchorPane>

   <!-- 2. 右上区域：设置面板 (Label 全部加上了 fx:id 并设为 95 宽) -->
   <VBox layoutX="555.0" layoutY="44.0" prefWidth="255.0" spacing="10.0" AnchorPane.rightAnchor="10.0">
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="serialPortLabel" alignment="CENTER" prefHeight="29.0" prefWidth="95.0" text="%label.serial_port_number" />
         <Region prefWidth="5.0" />
         <ComboBox fx:id="serialPortNamePicker" prefHeight="32.0" prefWidth="145.0" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="baudRateLabel" alignment="CENTER" prefHeight="29.0" prefWidth="95.0" text="%label.baud_rate" />
         <Region prefWidth="5.0" />
         <ComboBox fx:id="baudRatePicker" prefHeight="32.0" prefWidth="145.0" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="dataBitsLabel" alignment="CENTER" prefHeight="29.0" prefWidth="95.0" text="%label.data_bits" />
         <Region prefWidth="5.0" />
         <ComboBox fx:id="dataBitsPicker" prefHeight="32.0" prefWidth="145.0" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="stopBitsLabel" alignment="CENTER" prefWidth="95.0" text="%label.stop_bits" />
         <Region prefWidth="5.0" />
         <ComboBox fx:id="stopBitsPicker" prefHeight="32.0" prefWidth="145.0" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="parityLabel" alignment="CENTER" prefWidth="95.0" text="%label.parity" />
         <Region prefWidth="5.0" />
         <ComboBox fx:id="parityPicker" prefHeight="32.0" prefWidth="145.0" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="flowControlLabel" alignment="CENTER" prefWidth="95.0" text="%label.flow_control" />
         <Region prefWidth="5.0" />
         <ComboBox fx:id="flowControlPicker" prefHeight="32.0" prefWidth="145.0" />
      </HBox>
   </VBox>

   <!-- 3. 左上区域：接收区 (框线1) -->
   <TextArea fx:id="receive" editable="false" layoutX="10.0" layoutY="44.0" prefHeight="345.0" prefWidth="540.0" wrapText="true" AnchorPane.leftAnchor="10.0" />

   <!-- 4. 右侧操作区：串口开关等 (框线1右侧) -->
   <Button fx:id="serialPortSwitch" layoutX="565.0" layoutY="315.0" onAction="#serialPortSwitch" prefHeight="35.0" prefWidth="110.0" text="打开串口" />
   <Button fx:id="clearReceiveBtn" layoutX="690.0" layoutY="315.0" onAction="#cleanReceive" prefHeight="35.0" prefWidth="110.0" text="清除接收" />
   <CheckBox fx:id="receiveShow" layoutX="565.0" layoutY="360.0" selected="true" text="接收显示" />
   <CheckBox fx:id="hexReceive" layoutX="690.0" layoutY="360.0" text="HEX显示" />

   <Circle fx:id="serialPortLight" fill="#ff1f1f" layoutX="575.0" layoutY="332.0" mouseTransparent="true" radius="5.0" stroke="BLACK" />

   <!-- 5. 左下区域：发送输入框 (框线2) -->
   <TextArea fx:id="send" layoutX="10.0" layoutY="400.0" prefHeight="95.0" prefWidth="540.0" wrapText="true" AnchorPane.leftAnchor="10.0" />

   <!-- 6. 右下操作区：发送数据等 (框线2右侧) -->
   <Button fx:id="sendDataBtn" layoutX="565.0" layoutY="400.0" onAction="#sendData" prefHeight="35.0" prefWidth="110.0" text="发送数据" />
   <Button fx:id="clearSendBtn" layoutX="690.0" layoutY="400.0" onAction="#cleanSend" prefHeight="35.0" prefWidth="110.0" text="清除输入" />
   <Button fx:id="newWindowBtn" layoutX="565.0" layoutY="450.0" onAction="#createSerialPortStage" prefHeight="35.0" prefWidth="110.0" text="新建窗口" />
   <Button fx:id="analogReplyBtn" layoutX="690.0" layoutY="450.0" onAction="#analogReply" prefHeight="35.0" prefWidth="110.0" text="设备模拟" />

   <Circle fx:id="analogLight" fill="#ff1f1f" layoutX="700.0" layoutY="468.0" mouseTransparent="true" radius="5.0" stroke="BLACK" />

   <!-- 7. 底部设置横条 (框线3) -->
   <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="510.0" prefHeight="29.0" spacing="10.0" AnchorPane.leftAnchor="10.0">
      <CheckBox fx:id="hexSend" text="HEX发送" />
      <CheckBox fx:id="timedDispatch" text="循环发送" />
      <!-- 修复点：添加了 frequencyLabel 的 fx:id -->
      <Label fx:id="frequencyLabel" text="频率" />
      <TextField fx:id="time" prefWidth="55.0" text="1000" />
      <!-- 修复点：添加了 msLabel 的 fx:id -->
      <Label fx:id="msLabel" text="ms/次" />
      <Region prefWidth="20.0" />
   </HBox>
   <CheckBox fx:id="sendSave" layoutX="200.0" layoutY="548.0" text="保存发送" />
   <CheckBox fx:id="receiveSave" layoutX="605.0" layoutY="548.0" text="保存接收" />

   <!-- 8. 底部计数统计条 (框线4) -->
   <HBox alignment="CENTER_LEFT" layoutY="566.0" prefHeight="34.0" spacing="0.0" styleClass="status-bar-row" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

      <!-- 左侧：发送块 (平分 50% 宽度) -->
      <HBox alignment="CENTER_LEFT" prefHeight="34.0" spacing="0.0" HBox.hgrow="ALWAYS">
         <Label fx:id="sendLabel" alignment="CENTER" prefHeight="34.0" prefWidth="80.0" styleClass="title" text="发送:" />
         <!-- 数字 Label 必须 maxWidth="Infinity" 才能填满剩下的蓝色区域 -->
         <Label fx:id="sendNumber" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMousePressed="#cleanSendNumber" prefHeight="34.0" text="0" HBox.hgrow="ALWAYS" />
      </HBox>

      <!-- 右侧：接收块 (平分 50% 宽度) -->
      <HBox alignment="CENTER_LEFT" prefHeight="34.0" spacing="0.0" HBox.hgrow="ALWAYS">
         <Label fx:id="receiveLabel" alignment="CENTER" prefHeight="34.0" prefWidth="80.0" styleClass="title" text="接收:" />
         <Label fx:id="receiveNumber" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMousePressed="#cleanReceiveNumber" prefHeight="34.0" text="0" HBox.hgrow="ALWAYS" />
      </HBox>

   </HBox>
</AnchorPane>
